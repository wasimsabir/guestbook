<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-12 bg-info">
        <h1 class="text-light mt-4 ml-2">Create new guestbook</h1>
        <form class="w-50 mt-5 mx-auto" method="POST" action="/">
            <div class="form-group">
              <input type="text" class="form-control" id="title" aria-describedby="title" placeholder="Enter title" name="guestbook[title]">
            </div>
            <div class="form-group">
              <textarea name="guestbook[content]" id="content" cols="75" rows="10">
          
              </textarea>
            </div>
            <button type="submit" class="btn btn-primary mb-2">Submit</button>
          </form>
    </div>
  </div>
</div>

